<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adi.dice2.MainActivity">

    <TextView
        android:id="@+id/gameStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SCARNE'S DICE"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#d42758"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dice"
        android:alpha="0.25"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dicep"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/gameStatus"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/gameStatus"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/scorePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/player"/>

    <TextView
        android:id="@+id/scoreComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70dp"
        android:textStyle="bold"
        android:layout_marginLeft="230dp"
        android:layout_below="@+id/player"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To SCARNE'S DICE game"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textColor="#b9800c"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:src="@drawable/dice1"
        android:layout_below="@+id/gameStatus"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold"
            android:textSize="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:textSize="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll"
            android:onClick="rollDice"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
